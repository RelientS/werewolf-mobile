{
  "name": "werewolf-mobile",
  "version": "0.1.0",
  "description": "Mobile app for playing Werewolf with AI agents",
  "main": "expo/index.js",
  "scripts": {
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "backend": "cd ../werewolf-live/backend && pnpm dev",
    "agents": "node openclaw-agents/agent-runner.js",
    "dev:all": "concurrently \"pnpm backend\" \"pnpm agents\" \"pnpm start\"",
    "setup": "pnpm install && cd openclaw-agents && pnpm install",
    "lint": "eslint .",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "expo": "~51.0.0",
    "expo-status-bar": "~1.12.1",
    "react": "18.2.0",
    "react-native": "0.74.0",
    "react-native-safe-area-context": "4.10.1",
    "react-native-screens": "~3.31.1",
    "@react-navigation/native": "^6.1.17",
    "@react-navigation/native-stack": "^6.9.26",
    "socket.io-client": "^4.7.4",
    "zustand": "^4.5.0",
    "axios": "^1.6.7",
    "react-native-vector-icons": "^10.0.3"
  },
  "devDependencies": {
    "@babel/core": "^7.24.0",
    "@types/react": "~18.2.79",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "typescript": "~5.3.3"
  },
  "private": true
}
